<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.polimi.jgc.findamate"
    android:versionCode="1"
    android:versionName="1.0" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <uses-sdk
            android:minSdkVersion="19"
            android:targetSdkVersion="23" />
        <activity
            android:name="com.polimi.jgc.findamate.activity.InterestsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.polimi.jgc.findamate.activity.ListActivitiesActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.PasswordRecoveryRequestedActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.RegistrationSuccessActivity" />
        <activity android:name=".activity.RestorePasswordActivity" />
        <activity android:name=".activity.LoginSuccessActivity" />
        <service android:name="com.backendless.AndroidService" />
    </application>
</manifest>