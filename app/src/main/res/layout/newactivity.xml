<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp48"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp4"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Activity"
                android:textSize="@dimen/text_large"
                android:textColor="@color/list_title"
                android:layout_marginRight="@dimen/dp4"/>

        </LinearLayout>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp48"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp48"
                android:text="Title"
                android:paddingRight="@dimen/dp4"
                android:textSize="@dimen/text_medium"
                android:gravity="left"
                android:layout_marginRight="@dimen/dp4" />

            <EditText

                android:layout_width="@dimen/dp144"
                android:layout_height="@dimen/dp48"
                android:id="@+id/titleActivity"
                android:textSize="@dimen/text_medium"
                android:layout_marginLeft="@dimen/dp4"
                android:gravity="left"
                android:focusable="false"
                />

        </TableRow>
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp4"
            android:layout_marginBottom="@dimen/dp4">
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="Sport"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="left"
                    android:layout_marginRight="@dimen/dp4" />

                <EditText

                    android:layout_width="@dimen/dp144"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/sportActivity"
                    android:textSize="@dimen/text_medium"
                    android:layout_marginLeft="@dimen/dp4"
                    android:gravity="left"

                    android:focusable="false" />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="Date"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="left"
                    android:layout_margin="@dimen/dp4" />

                <EditText

                    android:layout_width="@dimen/dp144"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/dateActivity"
                    android:textSize="@dimen/text_medium"
                    android:layout_marginLeft="@dimen/dp4"
                    android:gravity="left"

                    android:inputType="datetime" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="Description"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="left"
                    android:layout_marginRight="@dimen/dp4" />

                <EditText

                    android:layout_width="@dimen/dp144"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/descriptionActivity"
                    android:textSize="@dimen/text_medium"
                    android:layout_marginLeft="@dimen/dp4"
                    android:gravity="left"

                    android:inputType="textLongMessage" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="Current players"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="left"
                    android:layout_margin="@dimen/dp4" />

                <EditText

                    android:layout_width="@dimen/dp144"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/currentplayersActivity"
                    android:textSize="@dimen/text_medium"
                    android:layout_margin="@dimen/dp4"
                    android:gravity="left"

                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="Players needed"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="left"
                    android:layout_margin="@dimen/dp4" />

                <EditText

                    android:layout_width="@dimen/dp144"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/playersneededActivity"
                    android:textSize="@dimen/text_medium"
                    android:layout_marginLeft="@dimen/dp4"
                    android:gravity="left"

                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="Location"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="left"
                    android:layout_marginRight="@dimen/dp4" />

                <EditText

                    android:layout_width="@dimen/dp144"
                    android:layout_height="@dimen/dp48"
                    android:id="@+id/locationActivity"
                    android:textSize="@dimen/text_medium"
                    android:layout_marginLeft="@dimen/dp4"
                    android:gravity="left"
                    android:inputType="text" />

            </TableRow>

        </TableLayout>

        <Button
            android:layout_width="@dimen/dp144"
            android:layout_height="@dimen/dp48"
            android:text="ADD ACTIVITY"
            android:id="@+id/addActivityButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp4"
            android:textSize="@dimen/text_medium"
            android:height="@dimen/dp40"/>
    </LinearLayout>
</LinearLayout>