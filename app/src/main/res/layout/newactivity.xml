<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Activity"
        android:textSize="@dimen/text_large"
        android:textColor="@color/list_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp" />

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp4"
            android:layout_marginBottom="@dimen/dp4">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp48"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp48"
                android:text="Title"
                android:paddingRight="@dimen/dp4"
                android:textSize="@dimen/text_medium"
                android:gravity="left"
                android:layout_marginRight="@dimen/dp4" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newactivity_title"
                android:layout_column="1" />

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="Category"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="left"
                    android:layout_marginRight="@dimen/dp4" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newactivity_category"
                android:layout_column="1" />

        </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="Date"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="left"
                    android:layout_margin="@dimen/dp4" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/newactivity_date"
                    android:layout_column="1"
                    android:inputType="text" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="Description"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="left"
                    android:layout_marginRight="@dimen/dp4" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/newactivity_description"
                    android:layout_column="1"
                    android:inputType="text" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="Current players"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="left"
                    android:layout_margin="@dimen/dp4" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/newactivity_currentplayers"
                    android:layout_column="1" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="Players needed"
                    android:paddingRight="@dimen/dp4"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/text_medium"
                    android:gravity="left"
                    android:layout_margin="@dimen/dp4" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/newactivity_playersneeded"
                    android:layout_column="1" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp48"
                    android:text="Location"
                    android:paddingRight="@dimen/dp4"
                    android:textSize="@dimen/text_medium"
                    android:gravity="left"
                    android:layout_marginRight="@dimen/dp4" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/newactivity_location"
                    android:layout_column="1"
                    android:inputType="text" />

            </TableRow>

    </TableLayout>

    <Button
            android:layout_width="@dimen/dp144"
            android:layout_height="@dimen/dp48"
            android:text="ADD ACTIVITY"
            android:id="@+id/newactivity_add"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp4"
            android:textSize="@dimen/text_medium"
            android:height="@dimen/dp40"/>
    </LinearLayout>
